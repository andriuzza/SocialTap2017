@model  SocialTap.Services.Services.PagedService<SocialTap.DataAccess.Models.Drink>

@{
    ViewData["Title"] = "Index";
}

<h2>Drinks Items</h2>


<form>
    <div class="form-group">
        <div class="col-md-3">
            <label>Find by name:</label>
            @Html.TextBox("SearchString")
        </div>
        <div class="col-md-push-5">
            <input class="btn btn-success" type="submit" value="Search" />
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "GetAllDrinks", new { sortOrder = @ViewData["NameSortParm"], currentFilter = @ViewData["CurrentFilter"] })
            </th>
            <th>
                @Html.ActionLink("Price", "GetAllDrinks", new { sortOrder = @ViewData["DateSortParm"], currentFilter = @ViewData["CurrentFilter"] })
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var pageLeft = Model.PageIndex - 1;
    var pageRight = Model.PageIndex + 1;
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>

@Html.ActionLink("Previous", "GetAllDrinks", new { sortOrder = @ViewData["CurrentSort"], page = @pageLeft, currentFilter = @ViewData["CurrentFilter"] })
@Html.ActionLink("Next", "GetAllDrinks", new { sortOrder = @ViewData["CurrentSort"], page = @pageRight, currentFilter = @ViewData["CurrentFilter"] })
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
