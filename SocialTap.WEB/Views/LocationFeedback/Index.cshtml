@model SocialTap.WEB.ViewModels.FeedbackViewModel

<h2>Upload a new drink</h2>
<hr />

@using (Html.BeginForm("Post", "LocationFeedback", FormMethod.Post))
{



        @Html.DropDownListFor(model => model.location, new SelectList(Model.location, "Id", "Name"), "", new { @class = "form-control", @placeholder = "Type" })
        @Html.ValidationMessageFor(model => model.location
   )
        <br />
        
        <br />
        <input type="submit" value="Submit" class="btn btn-success btn-lg" />
        <button class="btn btn-danger btn-lg" onclick="@Url.Action("ShowFeedback", "LocationFeedback", 1)">Cancel</button>
}